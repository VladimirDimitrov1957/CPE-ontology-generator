@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix cpe:   <http://www.semanticweb.org/cht_c/cpe#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
cpe:NameCorrectionShape
    a sh:NodeShape ;
    sh:targetClass cpe:NameCorrection ;
    sh:property [
        sh:path cpe:deprecated-by ;
        sh:minCount 1 ;
        sh:class cpe:CPEEntry ;
    ].
cpe:AdditionalInformationShape
    a sh:NodeShape ;
    sh:targetClass cpe:AdditionalInformation ;
    sh:property [
        sh:path cpe:deprecated-by ;
        sh:minCount 1 ;
        sh:class cpe:CPEEntry ;
    ].
cpe:DeprecatedShape
    a sh:NodeShape ;
    sh:targetClass cpe:Deprecated ;
    sh:property [
        sh:path cpe:deprecation_date ;
        sh:datatype xsd:dateTime ;
    ] ;
    sh:property [
        sh:path cpe:deprecation ;
        sh:minCount 1 ;
        sh:class cpe:Deprecation ;
    ].
cpe:AttributeValueShape
    a sh:NodeShape ;
    sh:datatype xsd:string ;
    sh:pattern "^(-|((\\*|(\\?)+)?([0-9A-Za-z-._]|(\\\\(\\\\|\\?|\\*|\\\"|\\[|\\]|[!#$%&'()+,/:;<=>@^`{|}~])))+(\\*|(\\?)+)?))?$".
cpe:CPEEntryShape
    a sh:NodeShape ;
    sh:targetClass cpe:CPEEntry ;
    sh:property [
        sh:path cpe:language ;
        sh:pattern "RFC5646";
        sh:flags "i" ; 
    ] ;
    sh:property [
        sh:path cpe:edition ;
        sh:node cpe:AttributeValueShape ;
    ] ;
    sh:property [
        sh:path cpe:product ;
        sh:node cpe:AttributeValueShape ;
    ] ;
    sh:property [
        sh:path cpe:SW_edition ;
        sh:node cpe:AttributeValueShape ;
    ] ;
    sh:property [
        sh:path cpe:target_SW ;
        sh:node cpe:AttributeValueShape ;
    ] ;
    sh:property [
        sh:path cpe:target_HW ;
        sh:node cpe:AttributeValueShape ;
    ] ;
    sh:property [
        sh:path cpe:update ;
        sh:node cpe:AttributeValueShape ;
    ] ;
    sh:property [
        sh:path cpe:vendor ;
        sh:node cpe:AttributeValueShape ;
    ] ;
    sh:property [
        sh:path cpe:version ;
        sh:node cpe:AttributeValueShape ;
    ] ;
    sh:or (
        [
            sh:path rdf:type ;
            sh:minCount 1 ;
            sh:hasValue cpe:Application ;
        ]
        [
            sh:path rdf:type ;
            sh:minCount 1 ;
            sh:hasValue cpe:Hardware ;
        ]
        [
            sh:path rdf:type ;
            sh:minCount 1 ;
            sh:hasValue cpe:OS ;
        ]
    ) ;
    sh:or (
        [
            sh:path rdf:type ;
            sh:minCount 1 ;
            sh:hasValue cpe:CPE ;
        ]
        [
            sh:path rdf:type ;
            sh:minCount 1 ;
            sh:hasValue cpe:Deprecated ;
        ]
    ).
cpe:DeprecationShape
    a sh:NodeShape ;
    sh:targetClass cpe:Deprecation ;
    sh:property [
        sh:path cpe:deprecation-date ;
        sh:datatype xsd:dateTime ;
    ] ;
    sh:or (
        [
            sh:path rdf:type ;
            sh:minCount 1 ;
            sh:hasValue cpe:AdditionalInformation ;
        ]
        [
            sh:path rdf:type ;
            sh:minCount 1 ;
            sh:hasValue cpe:NameCorrection ;
        ]
        [
            sh:path rdf:type ;
            sh:minCount 1 ;
            sh:hasValue cpe:NameRemoval ;
        ]
    ).